# The main file

# import
import sys
from cryptography.fernet import Fernet

# import modules
from funct import main_page, get_fernet, add_passwd, get_passwd, ch_pswd, del_pswd

while True:
    change = main_page()
    if change == 'a':
        f = get_fernet()
        add_passwd(f)
    elif change == 'g':
        get_passwd()
    elif change == "c":
        f = get_fernet()
        ch_pswd(f)
    elif change == 'd':
        del_pswd()
    elif change == 'w':
        print('In process...')
    elif change == 'q':
        sys.exit(0)
    else:
        continue
